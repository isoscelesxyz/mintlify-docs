{
  "config": {
    "extends": ".markdownlint.jsonc"
  },
  "globs": ["**/*.md", "**/*.mdx"],
  "ignores": [
    "**/node_modules/**",
    "**/.git/**",
    "**/.claude/**",
    "**/ai-notes/**",
    "README.md",
    "CLAUDE.md",
    "CONTRIBUTING.md"
  ],
  "outputFormatters": [["markdownlint-cli2-formatter-pretty", { "appendLink": true }]]
}
