# EditorConfig for Aerodrome Finance Documentation
# Ensures consistent coding styles across different editors and IDEs
# See https://editorconfig.org for more information

root = true

# Universal settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown and MDX files
[*.{mdx,md}]
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

# JSON, YAML configuration files
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript (if needed in future)
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Batch files use CRLF line endings
[*.bat]
end_of_line = crlf
