{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": ["*.mdx", "*.md"],
      "options": {
        "parser": "mdx",
        "proseWrap": "preserve",
        "printWidth": 100
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "printWidth": 100
      }
    },
    {
      "files": ["docs.json", "package.json"],
      "options": {
        "parser": "json",
        "tabWidth": 2,
        "printWidth": 100
      }
    }
  ]
}
